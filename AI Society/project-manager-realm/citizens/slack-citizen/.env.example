# Slack Configuration (product-manager specific)
PRODUCT_MANAGER_SLACK_SIGNING_SECRET=your_slack_signing_secret_here
PRODUCT_MANAGER_SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=project-manager
KAFKA_CONSUMER_GROUP_ID=slack-citizen-consumer
KAFKA_AUTO_CREATE_TOPICS=true

# Multi-tenancy
TENANT_MAPPING_SERVICE_URL=http://localhost:8080/api/tenants
DEFAULT_TENANT_ID=default

# Application
APP_NAME=slack-citizen
APP_VERSION=1.0.0
APP_PORT=8000
ENVIRONMENT=development

# Observability
LOG_LEVEL=INFO
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
ENABLE_METRICS=true

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY_SECONDS=1
RETRY_MAX_DELAY_SECONDS=60
DLQ_TOPIC_SUFFIX=.dlq

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
