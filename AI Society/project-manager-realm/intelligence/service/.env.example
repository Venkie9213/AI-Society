# Intelligence Service Configuration

# Application Settings
APP_ENV=development
DEBUG=true
APP_NAME="Intelligence Service"
APP_VERSION=0.1.0

# LLM Configuration (Gemini - using new unified SDK)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-3-flash-preview

# LLM Configuration (Claude - Future)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3.5-sonnet

# LLM Configuration (OpenAI - Future)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# LLM Behavior
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT_SECONDS=30
LLM_RETRY_ATTEMPTS=3
LLM_PRIMARY_PROVIDER=gemini
LLM_DEVELOPMENT_MODE=true

# Database Configuration
DATABASE_URL=postgresql://intelligence:dev_password@localhost:5432/intelligence
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=intelligence-service
KAFKA_TOPIC_PREFIX=intelligence
KAFKA_AUTO_OFFSET_RESET=earliest

# Vector Store Configuration
VECTOR_STORE_PROVIDER=chroma
VECTOR_STORE_DIMENSION=768
VECTOR_SIMILARITY_THRESHOLD=0.7

# Cost Tracking
COST_TRACKING_ENABLED=true
COST_BUDGET_MONTHLY_CENTS=100000
COST_ALERT_THRESHOLD=80

# Logging
LOG_LEVEL=info
STRUCTURED_LOGS=true
LOG_FORMAT=json

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
TENANT_ISOLATION_ENABLED=true

# CORS
CORS_ORIGINS=*
CORS_CREDENTIALS=true
